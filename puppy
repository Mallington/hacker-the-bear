## We want to retrieve data from the speech-to-text protocol

import pandas as pd
import numpy as np

class Database:

def __init__(self):
    self.DB = array(["what", "when", "who", "response"])
    self.what, self.when, self.who, self.response = [], [], [], []

def receive(self, file):
    self.file = pd.read_json(file)
    self.file = array(self.file)

